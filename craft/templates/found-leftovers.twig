<!-- Align Image Right -->
<div style="background-color: #{{ entry.hexCode }};">
<article class="row">

  <div class="columns f-case">

    <div class="large-6 medium-6 small-12 left case-info reveal">
      <div class="columns">
        <a class="transition left" href="{{entry.url}}">
          < <h1 class="entry-title bold left">{{entry.Title}}</h1>
        </a>

        {% set categories = entry.category %}
        {% if categories | length %}

          <ul class="inline">
            {% for category in categories %}
              <li>
                <p class="small caps pink">{{category.title}}</p>
              </li>
            {% endfor %}
          </ul>

        {% endif %}
        <h2 class="left entry-intro hide-for-small-only">{{entry.intro}}</h2>
      </div>

    </div>

    {% if entry.imgPaddingTop %}

      <!-- Image -->
      <div class="large-6 medium-6 small-12 right case-image">
        <div class="box">
          {% set desktopThumb = entry.desktopThumb.first() %}
          {% if desktopThumb %}
            <img src="{{ desktopThumb.url }}"/>
          {% endif %}
        </div>
      </div>

    {% elseif entry.imgPaddingBoth %}

      <!-- Image -->
      <div class="large-6 medium-6 small-12 right case-image padding">
        <div class="box">
          {% set desktopThumb = entry.desktopThumb.first() %}
          {% if desktopThumb %}
            <img src="{{ desktopThumb.url }}"/>
          {% endif %}
        </div>
      </div>

    {% else %}

      <!-- Image -->
      <div class="large-6 medium-6 small-12 right">
        <div class="box">
          {% set desktopThumb = entry.desktopThumb.first() %}
          {% if desktopThumb %}
            <img src="{{ desktopThumb.url }}"/>
          {% endif %}
        </div>
      </div>

    {% endif %}

  </div>
</a>
</article>
</div>
