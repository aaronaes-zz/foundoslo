<!-- Anchor slider -->
<div class="mellomting hidden">
  <div class="projectList hidden">
    <div class="row">
      <ul class="large-12 medium-12 small-12 columns">
        {% for entry in craft.entries.section('projects').limit(4) %}
          <li class="projectList__link">
            <h2 class="flat">
              <a class="transition" href="{{entry.url}}">{{entry.Title}}</a>
            </h2>
          </li>
        {% endfor %}
        <li class="left projectList__link--last">
          <h2 class="left">
            <a href="#work">More work</a>
          </h2>
          <span class="left">
            <h2>&nbsp/&nbsp</h2>
          </span>
          <h2 class="left">
            <a class="open-about">Profile</a>
          </h2>
        </li>
      </ul>
    </div>
  </div>

  <div class="inner hidden">
    <div class="owl-carousel owl-theme">
      {% for entry in craft.entries.section('projects') %}
        {% set projectThumb = entry.projectThumb.first() %}
        {% if projectThumb %}
          <div class="item" data-image="{{projectThumb.url}}" style="background-image: url('{{projectThumb.url}}');">
            <!-- <div class="item" data-image="{{projectThumb.url}}">
					<img src="{{projectThumb.url}}"/> -->
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

<!-- Ten Col Left -->
<div style="background-color: #{{ entry.hexCode }};">
  <article class="row">

    <div class="columns">

      <div class="large-6 medium-6 small-12 left case-info reveal">
        <div class="columns">
          <a class="transition left" href="{{entry.url}}">
            <h1 class="entry-title bold left">{{entry.Title}}</h1>
          </a>
          }
          <h2 class="left entry-intro hide-for-small-only">{{entry.intro}}</h2>
        </div>

      </div>

      {% if entry.imgPaddingTop %}

        <!-- Image -->
        <div class="large-10 medium-10 small-12 left">
          <div class="box">
            {% set desktopThumb = entry.desktopThumb.first() %}
            {% if desktopThumb %}
              <img src="{{ desktopThumb.url }}"/>
            {% endif %}
          </div>
        </div>

      {% elseif entry.imgPaddingBoth %}

        <!-- Image -->
        <div class="large-10 medium-10 small-12 left padding">
          <div class="box">
            {% set desktopThumb = entry.desktopThumb.first() %}
            {% if desktopThumb %}
              <img src="{{ desktopThumb.url }}"/>
            {% endif %}
          </div>
        </div>

      {% else %}

        <!-- Image -->
        <div class="large-10 medium-10 small-12 left">
          <div class="box">
            {% set desktopThumb = entry.desktopThumb.first() %}
            {% if desktopThumb %}
              <img src="{{ desktopThumb.url }}"/>
            {% endif %}
          </div>
        </div>

      {% endif %}

    </div>
  </a>
</article>
</div>

